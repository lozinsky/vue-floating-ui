{
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "removePackageFields": ["devDependencies", "scripts.build"]
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "syncWorkspaceLock": true,
      "changelogPreset": "conventionalcommits",
      "message": "chore: release packages"
    }
  },
  "ignoreChanges": ["**/test/**", "**/*.md"]
}
